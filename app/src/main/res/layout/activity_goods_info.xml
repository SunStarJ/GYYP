<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.sunstar.gyyp.vm.GoodsInfoVm"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/scroll_view"
            android:fillViewport="true"
            android:scrollbars="none"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_weight="1"
            tools:context=".ui.GoodsInfoActivity">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorWhite"
                    app:layout_constraintDimensionRatio="H,1:1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:background="@color/colorWhite"
                    app:layout_constraintTop_toBottomOf="@+id/banner"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:minLines="2"
                        android:textColor="@color/color_text_black"
                        android:text="@{data.data.title}"
                        android:textSize="16sp"
                        android:textStyle="bold"
                         />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        android:visibility="gone"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/country_img"
                            app:imageUrl="@{data.data.countrypic}"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:visibility="gone"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@{data.data.countryname}"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/price_show"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:background="@color/colorWhite"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_red"
                    android:paddingRight="10dp"
                    android:text="@{data.showPrice}"
                    app:layout_constraintTop_toBottomOf="@+id/name_layout"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:text="商品详情"
                    android:id="@+id/info_title"
                    android:background="@color/colorWhite"
                    android:textSize="16sp"
                    android:textColor="@color/color_text_black"
                    app:layout_constraintTop_toBottomOf="@+id/price_show"
                    android:layout_marginTop="10dp"/>

            </android.support.constraint.ConstraintLayout>
                <WebView
                    android:id="@+id/web"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:drawableTop="@mipmap/kefu"
                android:padding="10dp"
                android:onClick="@{(v)->data.callService(v)}"
                android:drawablePadding="10dp"
                android:text="客服"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_divider"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/select"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="12sp"
                android:text="收藏"
                android:onClick="@{()->data.collectionGoods()}"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:text="加入购物车"
                android:onClick="@{()->data.addToCart()}"
                android:gravity="center"
                android:background="#FA9897"
                android:textColor="@color/colorWhite"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:onClick="@{()->data.buyNowShowPop()}"
                android:background="@color/color_red"
                android:text="立即购买"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</layout>
