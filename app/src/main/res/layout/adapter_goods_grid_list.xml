<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.sunstar.gyyp.data.PreferenceItem" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <ImageView
            app:imageUrl="@{data.pic}"
            android:id="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:padding="10dp"
            app:layout_constraintDimensionRatio="H,1:1"
            android:layout_height="0dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/title"
            android:paddingLeft="10dp"
            android:text="@{data.title}"
            android:paddingRight="10dp"
            android:textColor="@color/color_text_black"
            app:layout_constraintTop_toBottomOf="@+id/image"/>
        <TextView
            android:id="@+id/price"
            android:textSize="16sp"
            android:textColor="@color/color_red"
            android:layout_width="0dp"
            android:text="@{@string/rmb+data.price}"
            app:layout_constraintRight_toLeftOf="@+id/country_img"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/country_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:imageUrl="@{data.countrypic}"
            app:layout_constraintDimensionRatio="H,1:1.2"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@+id/price"
            app:layout_constraintBottom_toBottomOf="@+id/price"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>
