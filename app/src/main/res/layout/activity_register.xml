<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="com.sunstar.gyyp.vm.UserVm"/>
    </data>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:background="@color/colorWhite"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:paddingRight="10dp"
            tools:context=".ui.RegisterActivity">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="推&#8194;荐&#8194;码"/>
                <EditText
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@={data.commentNum}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:hint="请输入推荐码"
                    android:textSize="14sp"
                    android:maxLength="11"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="手&#8194;机&#8194;号"/>
                <EditText
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@={data.phoneNum}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:hint="请输入手机号"
                    android:textSize="14sp"
                    android:maxLength="11"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="图片验证"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:hint="请输入验证码"
                    android:text="@={data.regisCode}"
                    android:textSize="14sp"
                    android:maxLength="4"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@{data.bitMap}"
                    android:onClick="@{()->data.createRegistCodeBitmap()}"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="密　　码"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:hint="请输入密码"
                    android:password="true"
                    android:inputType="textPassword"
                    android:text="@={data.password}"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:maxLength="20"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="确认密码"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:hint="请确认密码"
                    android:password="true"
                    android:inputType="textPassword"
                    android:text="@={data.againPassword}"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:maxLength="20"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="短信验证"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:hint="短信验证码"
                    android:text="@={data.checkCode}"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:maxLength="6"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->data.getPhoneCheckCode(1)}"
                    android:text="@{data.getCodeString}"
                    android:padding="10dp"
                    android:textColor="@color/color_red"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已阅读并同意"
                    android:checked="@{data.isReadServer}"
                    android:onCheckedChanged="@{(checkBox,isChecked)->data.isRead(isChecked)}"
                    android:textColor="@color/color_text_light"/>
                <TextView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《国源优品用户注册协议》"
                    android:textColor="@color/color_red"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_red"
                android:layout_marginTop="20dp"
                android:minHeight="20dp"
                android:padding="10dp"
                android:onClick="@{()->data.regist()}"
                android:text="注册"
                android:textColor="@color/colorWhite"
                android:gravity="center"/>
            <TextView
                android:onClick="@{()->data.back()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="前往登录"
                android:textColor="@color/color_text_light"
                android:padding="10dp"
                android:textSize="12sp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</layout>
