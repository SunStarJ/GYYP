<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.GetMoneyActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招商银行"
            android:id="@+id/bank_name"
            android:textColor="@color/color_text_black"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招商银行"
            android:id="@+id/bank_no"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_text_black"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="提现金额"
            android:textColor="@color/color_text_black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="提款积分"
                android:textColor="@color/color_text_black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/point_input"
                android:layout_width="match_parent"
                android:textColor="@color/color_text_black"
                android:background="@color/color_transparent"
                android:textSize="14sp"
                android:inputType="number|numberDecimal"
                android:padding="10dp"
                android:hint="请输入提款积分数量"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/current_points"
                android:textColor="@color/color_text_light"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/input_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_red"
                android:text="全部提现"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="支付密码"
                android:textColor="@color/color_text_black"/>
            <EditText
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@color/color_transparent"
                android:hint="请输入支付密码"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:id="@+id/pay_password"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/get_money_now"
        android:background="@color/color_red"
        android:text="提现"
        android:textColor="@color/colorWhite"/>

</LinearLayout>